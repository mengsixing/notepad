{
  "name": "notepad",
  "version": "1.4.2",
  "description": "一个记事本",
  "main": "index.js",
  "scripts": {
    "prebuild": "yarn run lint",
    "build": "cross-env NODE_ENV=production webpack --progress --profile --json > stat.json",
    "lint": "tslint --project . && stylelint src/components/*.css",
    "fix": "tslint --project . --fix && stylelint src/components/*.css --fix",
    "dev": "cross-env NODE_ENV=development webpack-dev-server --progress --open",
    "test": "jest --coverage",
    "docker": "npm run build && sh ./createDockerImage.sh"
  },
  "keywords": [
    "notepad"
  ],
  "author": "yhlben",
  "license": "MIT",
  "devDependencies": {
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-react": "^7.0.0",
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@types/jest": "^24.0.0",
    "babel-loader": "^8.0.4",
    "clean-webpack-plugin": "^1.0.0",
    "commitlint": "^7.2.1",
    "cross-env": "^5.1.4",
    "css-loader": "^2.1.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.3.1",
    "jest": "^23.4.1",
    "ora": "^3.0.0",
    "postcss-preset-env": "^6.5.0",
    "qiniu": "^7.2.1",
    "qiniu-upload-plugin": "^1.1.4",
    "style-loader": "^0.23.1",
    "stylelint": "^9.4.0",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-config-standard": "^18.2.0",
    "ts-import-plugin": "^1.4.4",
    "ts-jest": "^24.0.0",
    "ts-loader": "^5.3.2",
    "tslint": "^5.9.1",
    "typescript": "^3.2.2",
    "webpack": "^4.6.0",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.3"
  },
  "dependencies": {
    "@types/react": "^16.3.11",
    "@types/react-dom": "^16.0.5",
    "antd": "^4.0.0",
    "localforage": "^1.7.1",
    "postcss-loader": "^3.0.0",
    "react": "^16.3.2",
    "react-dom": "^16.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run fix",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
